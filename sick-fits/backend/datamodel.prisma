enum Permission {
	ADMIN
	USER
	ITEMCREATE
	ITEMUPDATE
	ITEMDELETE
	PERMISSIONUPDATE
}

type User {
	id: ID! @unique
	name: String!
	email: String! @unique
	password: String!
	resetToken: String
	resetTokenExpirary: Float
	permissions: [Permission]
	cart: [CartItem!]! # both a CartItem and the array are required
}

type Item {
	id: ID! @unique
	title: String!
	description: String!
	image: String
	largeImage: String
	price: Int!
	user: User!
}

type CartItem {
	id: ID! @unique
	quantity: Int! @default(value: 1)
	item: Item # relationship to Item type
	user: User! # relationship to User type
}
